{# @var card \BaksDev\Ozon\Package\Repository\Package\PrintOzonPackageOrders\PrintOzonPackageOrdersResult #}

{% set card_id = card.packageId %}

<div id="{{ card_id }}"
     data-name="{{ (card.productName ~ card.productOfferDetailName ~ card.productArticle)|lower }}"
     class="d-flex gap-3 align-items-center mb-2 pack rounded-3"
     style="background-color: {{ card.part ? 'rgba(25, 135, 84, 0.1); color: #198754' :'rgba(220, 53, 69, 0.1); color: #dc3545' }};">

    {# Обложка #}
    <button class="btn btn-link bg-cover rounded-2 lazy img-product m-0"
            style="width: 100px; height: 100px;
                    background-image: url({{ cdn_image_path(card.productImage, card.productImageExt, card.productImageCdn, 'small') }});">
    </button>

    <div class="w-100">

        <div class="fw-bolder text-truncate" style="max-width: 500px;">
            {{ card.productName }}
        </div>

        {% if card.productOfferDetailName %}
            <small class="fw-bolder opacity-75">{{ card.productOfferDetailName }}</small>
        {% endif %}

        <div>
            {% if card.productOfferName %}
                <small class="opacity-50">{{ card.productOfferName }}:</small> &nbsp;
                <strong>{{ card.productOfferValue|call_twig_func(card.productOfferReference) }} {{ card.productOfferPostfix }}</strong>&nbsp;
            {% endif %}

            {% if card.productVariationName %}
                <small class="opacity-50">{{ card.productVariationName }}:</small> &nbsp;
                <strong>{{ card.productVariationValue|call_twig_func(card.productVariationReference) }} {{ card.productVariationPostfix }}</strong>&nbsp;
            {% endif %}

            {% if card.productModificationName %}
                <small class="opacity-50">{{ card.productModificationName }}:</small> &nbsp;
                <strong>{{ card.productModificationValue|call_twig_func(card.productModificationReference) }} {{ card.productModificationPostfix }}</strong>&nbsp;
            {% endif %}

        </div>

        <small class="opacity-50">Арт:</small> &nbsp;
        <strong>{{ card.productArticle }}</strong>&nbsp;

        <div>
            <small class="opacity-50">Количество в заказе:</small> &nbsp;
            <strong>{{ card.productTotal }}</strong> шт.
        </div>

    </div>

    <div class="w-25">

        <button id="print-{{ card_id }}"
                class="btn btn-primary disabled prnt"
                data-href="{{ path('ozon-package:admin.package.print.pack', { id : card_id, print: true }) }}"
                data-bs-toggle="modal"
                data-bs-target="#modal">


            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                 class="bi bi-printer-fill" viewBox="0 0 16 16">
                <path d="M5 1a2 2 0 0 0-2 2v1h10V3a2 2 0 0 0-2-2H5zm6 8H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1z"/>
                <path d="M0 7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-2a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v2H2a2 2 0 0 1-2-2V7zm2.5 1a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z"/>
            </svg>

        </button>

    </div>

</div>
